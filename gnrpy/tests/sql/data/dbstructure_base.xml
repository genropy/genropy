<?xml version='1.0' encoding='UTF-8'?>
<GenRoBag>
  <packages tag="package_list">
    <video comment="video package" name_full="video" name_long="video" name_short="video" tag="package">
      <tables tag="table_list">
        <people fullname="video.people" name_long="People" name_short="people" pkey="id" pkg="video" rowcaption="name,year:%s (%s)" tag="table">
          <columns tag="column_list">
            <id _T="BAG" dtype="L" tag="column"/>
            <name _T="BAG" name_long="Name" name_short="N." tag="column"/>
            <year _T="BAG" dtype="L" name_long="Birth Year" name_short="Yr" tag="column"/>
            <nationality _T="BAG" name_long="Nationality" name_short="Ntl" tag="column"/>
          </columns>
        </people>
        <cast fullname="video.cast" name_long="Cast" name_short="cast" pkey="id" pkg="video" rowcaption="" tag="table">
          <columns tag="column_list">
            <id _T="BAG" dtype="L" tag="column"/>
            <movie_id dtype="L" name_long="Movie id" name_short="Mid" tag="column">
              <relation _T="BAG" mode="relation" related_column="movie.id"/>
            </movie_id>
            <person_id dtype="L" name_long="Person id" name_short="Prs" tag="column">
              <relation _T="BAG" mode="relation" related_column="people.id"/>
            </person_id>
            <role _T="BAG" name_long="Role" name_short="Rl." tag="column"/>
            <prizes _T="BAG" name_long="Prizes" name_short="Priz." size="40" tag="column"/>
          </columns>
        </cast>
        <movie fullname="video.movie" name_long="Movie" name_short="Mv" pkey="id" pkg="video" rowcaption="title" tag="table">
          <columns tag="column_list">
            <id _T="BAG" dtype="L" tag="column"/>
            <title _T="BAG" name_long="Title" name_short="Ttl." tag="column" validate_case="capitalize" validate_len="3,40"/>
            <genre _T="BAG" indexed="y" name_long="Genre" name_short="Gnr" tag="column" validate_case="upper" validate_len="3,10"/>
            <year _T="BAG" dtype="L" indexed="y" name_long="Year" name_short="Yr" tag="column"/>
            <nationality _T="BAG" name_long="Nationality" name_short="Ntl" tag="column"/>
            <description _T="BAG" name_long="Movie description" name_short="Dsc" tag="column"/>
          </columns>
        </movie>
        <dvd fullname="video.dvd" name_long="Dvd" name_short="Dvd" pkey="code" pkg="video" tag="table">
          <columns tag="column_list">
            <code _T="BAG" dtype="L" tag="column"/>
            <movie_id dtype="L" name_long="Movie id" name_short="Mid" tag="column">
              <relation _T="BAG" mode="relation" related_column="movie.id"/>
            </movie_id>
            <purchasedate _T="BAG" dtype="D" name_long="Purchase date" name_short="Pdt" tag="column"/>
            <available _T="BAG" name_long="Available" name_short="Avl" tag="column"/>
          </columns>
        </dvd>
		<location fullname="video.location" name_long="Location" name_short="Loc" pkey="id" pkg="video" tag="table">
		  <columns tag="column_list">
			<id _T="BAG" dtype="L" tag="column"/>
			<name _T="BAG" name_long="Name" name_short="Name" tag="column"/>
			<rating _T="BAG" dtype="I" name_long="Rating" name_short="Rt" tag="column"/>
		  </columns>
		</location>
      </tables>
    </video>
  </packages>
</GenRoBag>